<Page x:Class="WpfApplication1.Operation1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApplication1"
      mc:Ignorable="d" 
      d:DesignHeight="360" d:DesignWidth="640"
      Title="Operation1">

    <StackPanel x:Name="spMain" Loaded="spMain_Loaded">
        <TextBlock x:Name="txtDate" Text="Connecting..."></TextBlock>
        <ScrollViewer x:Name="svwrStudent" Height="300" VerticalScrollBarVisibility="Auto">
            <StackPanel x:Name="spStudent"></StackPanel>
        </ScrollViewer>
        <Button x:Name="btnConnect" Content="Connect" Click="btnConnect_Click"  Width="80"></Button>
    </StackPanel>
</Page>
