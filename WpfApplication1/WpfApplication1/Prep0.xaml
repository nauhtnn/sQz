<Page x:Class="WpfApplication1.Prep0"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApplication1"
      mc:Ignorable="d" 
      d:DesignHeight="360" d:DesignWidth="640"
      Title="Prep0">

    <StackPanel x:Name="spMain" Loaded="spMain_Loaded">
        <StackPanel Orientation="Horizontal">
            <TextBlock Text="Date"></TextBlock>
            <TextBox x:Name="tbxDate" Height="32" Width="393" />
            <Button x:Name="btnInsert"  Content="Insert" Height="32" Width="88" Click="btnInsert_Click"/>
        </StackPanel>
        <ScrollViewer Width="160" Height="200" VerticalScrollBarVisibility="Auto">
            <ListBox x:Name="lbxDate" Width="160"></ListBox>
        </ScrollViewer>
    </StackPanel>
</Page>
