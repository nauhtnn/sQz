<Page x:Class="sQzServer0.Operation0"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:sQzServer0"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1280"
      Title="ExamList">

    <StackPanel x:Name="spMain" Loaded="Main_Loaded">
        <StackPanel x:Name="spUp" Orientation="Horizontal" Margin="10">
            <ScrollViewer Width="100" Height="320" VerticalScrollBarVisibility="Auto">
                <ListBox x:Name="lbxDate" Width="100"/>
            </ScrollViewer>
            <ScrollViewer Width="516" Height="320" VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="40"/>
                            <ColumnDefinition Width="180"/>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition Width="140"/>
                            <ColumnDefinition Width="60"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="30"/>
                        </Grid.RowDefinitions>
                        <TextBlock x:Name="txtId" Text="ID" Background="AliceBlue" TextAlignment="Center"/>
                        <TextBlock x:Name="txtName" Grid.Column="1" Text="Name" Background="Beige" TextAlignment="Center"/>
                        <TextBlock x:Name="txtBirdate" Grid.Column="2" Text="Birthdate" Background="AliceBlue" TextAlignment="Center"/>
                        <TextBlock x:Name="txtBirpl" Grid.Column="3" Text="Birthplace" Background="Gold" TextAlignment="Center"/>
                        <TextBlock x:Name="txtMark" Grid.Column="4" Text="Mark" Background="Azure" TextAlignment="Center"/>
                    </Grid>
                    <Grid x:Name="gNee">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="40"/>
                            <ColumnDefinition Width="180"/>
                            <ColumnDefinition Width="80"/>
                            <ColumnDefinition Width="140"/>
                            <ColumnDefinition Width="60"/>
                        </Grid.ColumnDefinitions>
                    </Grid>
                </StackPanel>
            </ScrollViewer>
            <StackPanel>
                <Button x:Name="btnStartSrvr" Width="100" Height="40" Content="Start server" Click="StartSrvr_Click"></Button>
                <Button x:Name="btnStopSrvr" Width="100" Height="40" Content="Stop srvr" Click="StopSrvr_Click"></Button>
                <Button x:Name="btnPrep" Width="100" Height="40" Content="Prepare" Click="btnPrep_Click"></Button>
                <Button x:Name="btnExit" Content="Close" Height="40" Width="100" Click="btnExit_Click"/>
            </StackPanel>
            <StackPanel x:Name="spLeft">
                <ScrollViewer x:Name="svwrStt" Height="320" Width="400" VerticalScrollBarVisibility="Auto">
                    <TextBlock x:Name="lblStatus" Width="400" HorizontalAlignment="Left" VerticalAlignment="Stretch" TextWrapping="Wrap"></TextBlock>
                </ScrollViewer>
            </StackPanel>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="40"/>
                    <ColumnDefinition Width="80"/>
                    <ColumnDefinition Width="40"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="30"/>
                </Grid.RowDefinitions>
                <TextBlock x:Name="txtNe" Text="N of exam" Grid.Column="0" Margin="5" Height="25"/>
                <TextBox x:Name="tbxNe" Width="30" Grid.Column="1" Margin="5"/>
                <Button Grid.Row="0" x:Name="btnExGen" Content="Create Q Sh" Grid.Column="2" Click="btnExGen_Click"/>
                <TextBlock x:Name="txtNq" Text="N of quest" Grid.Row="1" Grid.Column="0" Margin="5" Height="25"/>
                <TextBlock x:Name="tbxNq" Width="30" Grid.Row="1" Grid.Column="1" Margin="5"/>
                <TextBlock Text="module 2" Grid.Row="2" Grid.Column="0" Margin="5" />
                <TextBox x:Name="tbxIU2" Width="30" Grid.Row="2" Grid.Column="1" Margin="5"/>
                <TextBlock Text="module 4" Grid.Row="3" Grid.Column="0" Margin="5" />
                <TextBox x:Name="tbxIU4" Width="30" Grid.Row="3" Grid.Column="1" Margin="5"/>
                <TextBlock Text="module 6" Grid.Row="4" Grid.Column="0" Margin="5" />
                <TextBox x:Name="tbxIU6" Width="30" Grid.Row="4" Grid.Column="1" Margin="5"/>
                <TextBlock Text="module 8" Grid.Row="5" Grid.Column="0" Margin="5" />
                <TextBox x:Name="tbxIU8" Width="30" Grid.Row="5" Grid.Column="1" Margin="5"/>
                <TextBlock Text="module 10" Grid.Row="6" Grid.Column="0" Margin="5" />
                <TextBox x:Name="tbxIU10" Width="30" Grid.Row="6" Grid.Column="1" Margin="5"/>
                <TextBlock Text="module 12" Grid.Row="7" Grid.Column="0" Margin="5" />
                <TextBox x:Name="tbxIU12" Width="30" Grid.Row="7" Grid.Column="1" Margin="5"/>
                <TextBlock Text="module 14" Grid.Row="8" Grid.Column="0" Margin="5" />
                <TextBox x:Name="tbxIU14" Width="30" Grid.Row="8" Grid.Column="1" Margin="5"/>

                <TextBlock Text="module 1" Grid.Row="1" Grid.Column="2" Margin="5" Height="25"/>
                <TextBox x:Name="tbxIU1" Width="30" Grid.Row="1" Grid.Column="3" Margin="5"/>
                <TextBlock Text="module 3" Grid.Row="2" Grid.Column="2" Margin="5" />
                <TextBox x:Name="tbxIU3" Width="30" Grid.Row="2" Grid.Column="3" Margin="5"/>
                <TextBlock Text="module 5" Grid.Row="3" Grid.Column="2" Margin="5" />
                <TextBox x:Name="tbxIU5" Width="30" Grid.Row="3" Grid.Column="3" Margin="5"/>
                <TextBlock Text="module 7" Grid.Row="4" Grid.Column="2" Margin="5" />
                <TextBox x:Name="tbxIU7" Width="30" Grid.Row="4" Grid.Column="3" Margin="5"/>
                <TextBlock Text="module 9" Grid.Row="5" Grid.Column="2" Margin="5" />
                <TextBox x:Name="tbxIU9" Width="30" Grid.Row="5" Grid.Column="3" Margin="5"/>
                <TextBlock Text="module 11" Grid.Row="6" Grid.Column="2" Margin="5" />
                <TextBox x:Name="tbxIU11" Width="30" Grid.Row="6" Grid.Column="3" Margin="5"/>
                <TextBlock Text="module 13" Grid.Row="7" Grid.Column="2" Margin="5" />
                <TextBox x:Name="tbxIU13" Width="30" Grid.Row="7" Grid.Column="3" Margin="5"/>
                <TextBlock Text="module 15" Grid.Row="8" Grid.Column="2" Margin="5" />
                <TextBox x:Name="tbxIU15" Width="30" Grid.Row="8" Grid.Column="3" Margin="5"/>
            </Grid>
            <ScrollViewer Width="400" Height="320" VerticalScrollBarVisibility="Auto">
				<TabControl x:Name="tbcQuest">
				</TabControl>
            </ScrollViewer>
        </StackPanel>
    </StackPanel>
</Page>
