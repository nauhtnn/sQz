<Page x:Class="sQzServer0.Prep0"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:sQzServer0"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1280"
      ShowsNavigationUI="False"
      Title="Prep0">

    <StackPanel x:Name="spMain" Loaded="Main_Loaded">
        <StackPanel Orientation="Horizontal">
            <StackPanel>
                <TextBlock Text="(yyyy-M-d)" Margin="28,0,0,0"/>
                <StackPanel Orientation="Horizontal" Margin="10,0,10,0">
                    <TextBox x:Name="tbxBrd" Height="30" Width="90" />
                    <Button x:Name="btnInsBrd"  Content="+" Height="30" Width="30" Click="btnInsBrd_Click"/>
                </StackPanel>
                <ListBox x:Name="lbxBrd" Width="120" Height="200" SelectionChanged="lbxBrd_SelectionChanged"/>
            </StackPanel>
            <StackPanel>
                <TextBlock Text="(h:m)" Margin="20,0,0,0"/>
                <StackPanel Orientation="Horizontal" Margin="10,0,10,0">
                    <TextBox x:Name="tbxSl" Height="30" Width="50" />
                    <Button x:Name="btnInsSl"  Content="+" Height="30" Width="30" Click="btnInsSl_Click"/>
                </StackPanel>
                <ListBox x:Name="lbxSl" Width="80" Height="200" SelectionMode="Multiple"/>
            </StackPanel>
            <TabControl x:Name="tbcNee" Width="1040"/>
            <StackPanel x:Name="refSl" Visibility="Collapsed">
                <Grid Height="40">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <Button Content="X" Height="40" Width="40"/>
                    <StackPanel Orientation="Horizontal" Grid.Column="1" HorizontalAlignment="Center">
                        <Button Name="a" Content="+" Height="40" Width="40"/>
                        <Button Content="X" Height="40" Width="40" Margin="100,0,0,0"/>
                    </StackPanel>
                </Grid>
                <StackPanel Orientation="Horizontal" Margin="10,5,10,0">
                    <ListBox Name="_1" Width="475" Height="200"/>
                    <Button Content="&lt;&lt;" Height="30" Width="60" Margin="5,0,5,0"/>
                    <ListBox Name="_2" Width="475" Height="200"/>
                </StackPanel>
            </StackPanel>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="10,10,10,0">
            <ListBox x:Name="lbxQCatgry" Width="160" Height="410" SelectionChanged="lbxQCatgry_SelectionChanged"/>
            <StackPanel>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="420"/>
                        <ColumnDefinition Width="30"/>
                    </Grid.ColumnDefinitions>
                    <Button Content="Sel All" x:Name="btnSelAll" Click="btnSelAll_Click" Width="60" Height="30" HorizontalAlignment="Right"/>
                    <Button Content="Del" Grid.Column="1" x:Name="btnDel" Click="btnDel_Click"  Width="60" Height="30"/>
                </Grid>
                <ScrollViewer Width="472" Height="410" VerticalScrollBarVisibility="Auto" BorderBrush="Black" BorderThickness="1">
				    <Grid x:Name="gDBQuest">
					    <Grid.ColumnDefinitions>
						    <ColumnDefinition Width="420"/>
						    <ColumnDefinition Width="30"/>
					    </Grid.ColumnDefinitions>
				    </Grid>
                </ScrollViewer>
            </StackPanel>
            <StackPanel HorizontalAlignment="Stretch">
                <Button x:Name="btnQBrowse" Content="Browse Question" Height="60" Width="156" Click="btnQBrowse_Click"></Button>
                <Button x:Name="btnInsQuest" Content="&lt;&lt;" Height="30" Width="60" Click="btnInsQuest_Click"></Button>
            </StackPanel>
            <ScrollViewer Width="472" Height="410" VerticalScrollBarVisibility="Auto" BorderBrush="Black" BorderThickness="1">
                <Grid x:Name="gQuest">
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="420"/>
						<ColumnDefinition Width="30"/>
					</Grid.ColumnDefinitions>
				</Grid>
            </ScrollViewer>
        </StackPanel>
    </StackPanel>
</Page>
