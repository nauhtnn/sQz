<Page x:Class="sQzServer0.Prep0"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:sQzServer0"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1280"
      ShowsNavigationUI="False"
      Title="Prep0">

    <StackPanel x:Name="spMain" Loaded="Main_Loaded" Orientation="Horizontal" Margin="10" Background="#f0f0f0">
        <StackPanel Width="240">
            <Button x:Name="btnMMenu"  Width="120" Height="40" Click="btnMMenu_Click" Background="#f15a23" Foreground="#fff"
                        Margin="0,10,0,0"/>
            <Border BorderBrush="Black" BorderThickness="0,1,0,0" Margin="0,10,0,10"/>
            <StackPanel Orientation="Horizontal">
                <StackPanel>
                    <TextBlock Name="txtDt" TextAlignment="Center"/>
                    <StackPanel Orientation="Horizontal" Margin="10,0,10,0">
                        <TextBox Name="tbxBrd" Height="30" Width="90" />
                        <Button Name="btnInsBrd"  Content="+" Height="30" Width="30" Click="btnInsBrd_Click"/>
                    </StackPanel>
                    <ListBox x:Name="lbxBrd" Width="120" Height="120" SelectionChanged="lbxBrd_SelectionChanged"/>
                </StackPanel>
                <StackPanel>
                    <TextBlock Name="txtHm" TextAlignment="Center"/>
                    <StackPanel Orientation="Horizontal" Margin="10,0,10,0">
                        <TextBox x:Name="tbxSl" Height="30" Width="50" />
                        <Button x:Name="btnInsSl"  Content="+" Height="30" Width="30" Click="btnInsSl_Click"/>
                    </StackPanel>
                    <ListBox x:Name="lbxSl" Width="80" Height="120" SelectionMode="Multiple"/>
                </StackPanel>
            </StackPanel>
            <Border BorderBrush="Black" BorderThickness="0,1,0,0" Margin="0,10,0,10"/>
            <TextBlock Name="txtIU" Margin="0,0,0,10"/>
            <ListBox x:Name="lbxQCatgry" Width="160" Height="410" SelectionChanged="lbxQCatgry_SelectionChanged"/>
        </StackPanel>
        <TabControl x:Name="tbcNee" Width="1040" Visibility="Collapsed"/>
        <StackPanel x:Name="refSl" Visibility="Collapsed">
            <StackPanel Name="sp1" Orientation="Horizontal">
                <TextBlock x:Name="txtNeeDB" Width="240" Padding="0,4,0,0"/>
                <Button x:Name="btnDBDelNee" Height="40" Width="120" Margin="160,0,0,0"/>
            </StackPanel>
            <StackPanel Name="sp2" Orientation="Horizontal">
                <TextBlock x:Name="txtNeeTmp" Width="240" Padding="0,4,0,0"/>
                <Button Name="btnImpDBNee" Height="40" Width="120" Margin="5,0,5,0"/>
                <Button Name="btnFileNee" Height="40" Width="120"/>
                <Button Name="btnTmpDelNee" Height="40" Width="120"/>
            </StackPanel>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="60"/>
                    <ColumnDefinition Width="240"/>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="240"/>
                    <ColumnDefinition Width="100"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                </Grid.RowDefinitions>
                <TextBlock Name="txtId" Background="Coral" TextAlignment="Center"/>
                <TextBlock Name="txtName" Grid.Column="1" Background="Brown" TextAlignment="Center"/>
                <TextBlock Name="txtBirdate" Grid.Column="2" Background="Cyan" TextAlignment="Center"/>
                <TextBlock Name="txtBirpl" Grid.Column="3" Background="Gold" TextAlignment="Center"/>
                <TextBlock Name="txtRoom" Grid.Column="4" Background="Blue" TextAlignment="Center"/>
            </Grid>
            <ScrollViewer VerticalScrollBarVisibility="Auto" Height="300">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="60"/>
                        <ColumnDefinition Width="240"/>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="240"/>
                        <ColumnDefinition Width="100"/>
                    </Grid.ColumnDefinitions>
                </Grid>
            </ScrollViewer>
        </StackPanel>
        <StackPanel x:Name="spQ" Orientation="Horizontal">
            <StackPanel>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="420"/>
                        <ColumnDefinition Width="30"/>
                    </Grid.ColumnDefinitions>
                    <Button Name="btnAllQ" Click="btnAllQ_Click" Width="60" Height="30" HorizontalAlignment="Right"/>
                    <Button x:Name="btnDelQ" Grid.Column="1" Click="btnDelQ_Click"  Width="60" Height="30"/>
                </Grid>
                <ScrollViewer Width="472" Height="410" VerticalScrollBarVisibility="Auto" BorderBrush="Black" BorderThickness="1">
				    <Grid x:Name="gDBQuest">
					    <Grid.ColumnDefinitions>
						    <ColumnDefinition Width="420"/>
						    <ColumnDefinition Width="30"/>
					    </Grid.ColumnDefinitions>
				    </Grid>
                </ScrollViewer>
            </StackPanel>
            <StackPanel HorizontalAlignment="Stretch">
                <Button x:Name="btnFileQ" Height="60" Width="156" Click="btnFileQ_Click"></Button>
                <Button x:Name="btnImpDBQ" Height="30" Width="60" Click="btnImpDBQ_Click"></Button>
            </StackPanel>
            <ScrollViewer Width="472" Height="410" VerticalScrollBarVisibility="Auto" BorderBrush="Black" BorderThickness="1">
                <Grid x:Name="gQuest">
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="420"/>
						<ColumnDefinition Width="30"/>
					</Grid.ColumnDefinitions>
				</Grid>
            </ScrollViewer>
        </StackPanel>
    </StackPanel>
</Page>
