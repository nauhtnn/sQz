<Page x:Class="sQzClient.Authentication"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:sQzClient"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1280"
      Title="Authentication">

    <StackPanel x:Name="spMain" Loaded="Main_Loaded">
        <TextBlock x:Name="txtWelcome" Text="Welcome" Margin="20,30,20,5" Height="30" Width="100" TextAlignment="Center"/>
        <TextBlock x:Name="txtDate" Text="Date" Margin="20,5,20,20" Height="30" Width="100" TextAlignment="Center"/>
        <Grid HorizontalAlignment="Center">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="400"/>
                <ColumnDefinition Width="400"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="30"/>
            </Grid.RowDefinitions>
            <TextBlock Text="Examinee Id" Height="30" Width="100" TextAlignment="Center"/>
            <TextBox x:Name="tbxNeeId" Grid.Row="1" Height="30" Width="100" MaxLength="5" KeyUp="tbx_NeeIdKeyUp"/>
            <TextBlock Text="Birthdate (dd/mm/yyyy)" Grid.Column="1" Height="30" Width="200" TextAlignment="Center"/>
            <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Center">
                <TextBox x:Name="tbxD" Height="30" Width="30" MaxLength="2" KeyUp="tbx_DMYKeyUp"/>
                <TextBlock Text="/" Width="10" TextAlignment="Center"/>
                <TextBox x:Name="tbxM" Height="30" Width="30" MaxLength="2" KeyUp="tbx_DMYKeyUp"/>
                <TextBlock Text="/" Width="10" TextAlignment="Center"/>
                <TextBox x:Name="tbxY" Height="30" Width="60" MaxLength="4" KeyUp="tbx_DMYKeyUp"/>
            </StackPanel>
            <TextBlock x:Name="txtNeeIdMsg" Grid.Row="2"/>
            <TextBlock x:Name="txtDMYMsg" Grid.Row="2" Grid.Column="1"/>
            <Button x:Name="btnSignIn" Grid.Row="3" Content="Sign In" Height="30" Width="100" Click="btnSignIn_Click"/>
            <Button x:Name="btnReconn" Grid.Row="3" Grid.Column="1" Content="Reconnect" HorizontalAlignment="Left" Height="30" Width="100" Click="btnReconn_Click"/>
        </Grid>
        <TextBlock x:Name="txtAuth" Width="400" Height="30"/>
        <ScrollViewer Width="600" Height="300" VerticalScrollBarVisibility="Auto">
            <TextBox x:Name="lblStatus" Height="300" TextWrapping="Wrap" Text="TextBox" Width="600"/>
        </ScrollViewer>
        <Button x:Name="btnClose" Content="Close" Height="30" Width="100" Click="btnClose_Click"/>
    </StackPanel>
</Page>
