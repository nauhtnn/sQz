<Page x:Class="sQzServer0.Prep0"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:sQzServer0"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1280"
      Title="Prep0">

    <StackPanel x:Name="spMain" Loaded="Main_Loaded">
        <StackPanel Orientation="Horizontal">
            <StackPanel>
                <StackPanel Orientation="Horizontal" Margin="10,10,10,0">
                    <TextBox x:Name="tbxBrd" Height="30" Width="120" />
                    <Button x:Name="btnInsBrd"  Content="+" Height="30" Width="30" Click="btnInsBrd_Click"/>
                </StackPanel>
                <ScrollViewer Width="120" Height="200" VerticalScrollBarVisibility="Auto">
                    <ListBox x:Name="lbxBrd" Width="120" SelectionChanged="lbxBrd_SelectionChanged"/>
                </ScrollViewer>
            </StackPanel>
            <StackPanel>
                <StackPanel Orientation="Horizontal" Margin="10,10,10,0">
                    <TextBox x:Name="tbxSl" Height="30" Width="60" />
                    <Button x:Name="btnInsSl"  Content="+" Height="30" Width="30" Click="btnInsSl_Click"/>
                </StackPanel>
                <ScrollViewer Width="60" Height="200" VerticalScrollBarVisibility="Auto">
                    <ListBox x:Name="lbxSl" Width="60" SelectionChanged="lbxSl_SelectionChanged"></ListBox>
                </ScrollViewer>
            </StackPanel>
            <TabControl x:Name="tbcNee" Width="920"/>
            <StackPanel x:Name="refSl" Visibility="Collapsed">
                <Button Content="+" Height="60" Width="160"/>
                <StackPanel Orientation="Horizontal" Margin="10,5,10,0">
                    <!--<ScrollViewer Width="420" Height="200" VerticalScrollBarVisibility="Auto" Margin="10, 0, 0, 0">-->
                        <ListBox Name="_1" Width="420" Height="200"/>
                    <!--</ScrollViewer>-->
                    <Button Content="&lt;&lt;" Height="30" Width="60" Margin="5,0,0,5"/>
                    <!--<ScrollViewer Width="420" Height="200" VerticalScrollBarVisibility="Auto">-->
                    <ListBox Name="_2" Width="420" Height="200"/>
                    <!--</ScrollViewer>-->
                </StackPanel>
            </StackPanel>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Margin="10,10,10,0">
            <ScrollViewer Width="160" Height="410" VerticalScrollBarVisibility="Auto">
                <ListBox x:Name="lbxQCatgry" Width="160" SelectionChanged="lbxQCatgry_SelectionChanged"></ListBox>
            </ScrollViewer>
            <StackPanel>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="420"/>
                        <ColumnDefinition Width="30"/>
                    </Grid.ColumnDefinitions>
                    <Button Content="Sel All" x:Name="btnSelAll" Click="btnSelAll_Click" Width="60" Height="30" HorizontalAlignment="Right"/>
                    <Button Content="Del" Grid.Column="1" x:Name="btnDel" Click="btnDel_Click"  Width="60" Height="30"/>
                </Grid>
                <ScrollViewer Width="472" Height="410" VerticalScrollBarVisibility="Auto" BorderBrush="Black" BorderThickness="1">
				    <Grid x:Name="gDBQuest">
					    <Grid.ColumnDefinitions>
						    <ColumnDefinition Width="420"/>
						    <ColumnDefinition Width="30"/>
					    </Grid.ColumnDefinitions>
				    </Grid>
                </ScrollViewer>
            </StackPanel>
            <StackPanel HorizontalAlignment="Stretch">
                <Button x:Name="btnQBrowse" Content="Browse Question" Height="60" Width="156" Click="btnQBrowse_Click"></Button>
                <Button x:Name="btnInsQuest" Content="&lt;&lt;" Height="30" Width="60" Click="btnInsQuest_Click"></Button>
            </StackPanel>
            <ScrollViewer Width="472" Height="410" VerticalScrollBarVisibility="Auto" BorderBrush="Black" BorderThickness="1">
                <Grid x:Name="gQuest">
					<Grid.ColumnDefinitions>
						<ColumnDefinition Width="420"/>
						<ColumnDefinition Width="30"/>
					</Grid.ColumnDefinitions>
				</Grid>
            </ScrollViewer>
        </StackPanel>
    </StackPanel>
</Page>
