<Page x:Class="sQzClient.TakeExam"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:sQzClient"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1280"
      Title="TakeExam">

    <StackPanel x:Name="spMain" Loaded="Main_Loaded">
        <TextBlock x:Name="txtWelcome" Height="30"/>
        <Grid x:Name="gQSheet">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <StackPanel x:Name="spLp" HorizontalAlignment="Left" Height="540" Width="250">
                <TextBlock Text="Ans Sheet" Height="20" HorizontalAlignment="Center" FontFamily="Arial" FontWeight="Bold" FontSize="20"/>
                <ScrollViewer x:Name="svwrAnsSh" Height="520" Width="250" VerticalScrollBarVisibility="Auto">
                    <Grid x:Name="gAnsSh">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                    </Grid>
                </ScrollViewer>
                <Button x:Name="btnSubmit" Content="Submit" Click="btnSubmit_Click" Height="20" Width="40"></Button>
            </StackPanel>
            <ScrollViewer Grid.Column="1" x:Name="svwrQSh" Width="1030" Height="540" VerticalScrollBarVisibility="Auto" HorizontalAlignment="Left" VerticalAlignment="Top">
            </ScrollViewer>
        </Grid>
    </StackPanel>
</Page>
