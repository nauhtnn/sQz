<Page x:Class="sQzServer1.Operation1"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:sQzServer1"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1280"
      Title="Operation1">

    <StackPanel x:Name="spMain" Loaded="spMain_Loaded">
        <TextBlock x:Name="txtDate" Text="Connecting..." HorizontalAlignment="Center"></TextBlock>
        <StackPanel Orientation="Horizontal" Margin="10">
            <ScrollViewer x:Name="svwrStt" Width="300" Height="600" VerticalScrollBarVisibility="Auto">
                <TextBlock x:Name="lblStatus" Width="300" TextWrapping="Wrap" Background="AliceBlue"></TextBlock>
            </ScrollViewer>
            <StackPanel>
                <ScrollViewer x:Name="svwrStudent" Width="600" Height="300" VerticalScrollBarVisibility="Auto">
                    <!--<StackPanel x:Name="spStudent"></StackPanel>-->
                    <TextBlock x:Name="txtStudent" Width="600" TextWrapping="Wrap" />
                </ScrollViewer>
                <ScrollViewer Width="600" Height="300" VerticalScrollBarVisibility="Auto">
                    <StackPanel x:Name="gQuest"></StackPanel>
                </ScrollViewer>
            </StackPanel>
            <ScrollViewer Width="300" Height="600" VerticalScrollBarVisibility="Auto">
                <Grid x:Name="gStudent">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="100"/>
                    </Grid.ColumnDefinitions>
                </Grid>
            </ScrollViewer>
        </StackPanel>
        <StackPanel Orientation="Horizontal">
            <Button x:Name="btnConnect" Content="Connect Srvr" Click="btnConnect_Click"  Width="80"></Button>
            <Button x:Name="btnDisconnect" Content="Disconnect Srvr" Click="btnDisconnect_Click"  Width="80"></Button>
            <Button x:Name="btnStartSrvr" Content="Start srvr" Click="StartSrvr_Click" Width="80"></Button>
            <Button x:Name="btnStopSrvr" Content="Stop srvr" Click="StopSrvr_Click" Width="80"></Button>
            <Button x:Name="btnClose" Content="Close" Click="btnClose_Click" Width="80"></Button>
            <Button x:Name="btnCli" Content="dev cli" Click="btnCli_Click" Width="80"></Button>
        </StackPanel>
    </StackPanel>
</Page>
