<Page x:Class="sQzServer0.Prep0"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:sQzServer0"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1280"
      ShowsNavigationUI="False"
      Title="Prep0">

    <StackPanel x:Name="spMain" Loaded="Main_Loaded" Orientation="Horizontal" Margin="10" Background="#f0f0f0">
        <StackPanel Width="240">
            <Button x:Name="btnMMenu"  Width="120" Height="40" Click="btnMMenu_Click" Background="#f15a23" Foreground="#fff"
                        Margin="0,10,0,0"/>
            <Border BorderBrush="Black" BorderThickness="0,1,0,0" Margin="0,10,0,10"/>
            <StackPanel Orientation="Horizontal">
                <StackPanel>
                    <TextBlock Name="txtDt" TextAlignment="Center"/>
                    <StackPanel Orientation="Horizontal" Margin="10,5,10,0">
                        <TextBox Name="tbxBrd" Height="30" Width="90" />
                        <Button Name="btnInsBrd"  Content="+" Height="30" Width="30" Click="btnInsBrd_Click" Background="#1c64e7" Foreground="#fff"/>
                    </StackPanel>
                    <ListBox x:Name="lbxBrd" Width="120" Height="120" SelectionChanged="lbxBrd_SelectionChanged"/>
                </StackPanel>
                <StackPanel>
                    <TextBlock Name="txtHm" TextAlignment="Center"/>
                    <StackPanel Orientation="Horizontal" Margin="10,5,10,0">
                        <TextBox x:Name="tbxSl" Height="30" Width="50" />
                        <Button x:Name="btnInsSl"  Content="+" Height="30" Width="30" Click="btnInsSl_Click" Background="#1c64e7" Foreground="#fff"/>
                    </StackPanel>
                    <ListBox x:Name="lbxSl" Width="80" Height="120" SelectionMode="Multiple"/>
                </StackPanel>
            </StackPanel>
            <Border BorderBrush="Black" BorderThickness="0,1,0,0" Margin="0,10,0,10"/>
            <TextBlock Name="txtIU" Margin="0,0,0,10" HorizontalAlignment="Center"/>
            <ListBox x:Name="lbxQCatgry" Width="200" Height="410" SelectionChanged="lbxQCatgry_SelectionChanged"/>
        </StackPanel>
        <TabControl Margin="10,0,0,0">
            <TabItem Name="tbi1">
                <TabControl x:Name="tbcNee" Width="1010"/>
            </TabItem>
            <TabItem Name="tbi2">
                <StackPanel x:Name="spQ" Orientation="Horizontal">
                    <StackPanel>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="395"/>
                                <ColumnDefinition Width="80"/>
                            </Grid.ColumnDefinitions>
                            <Button Name="btnAllQ" Click="btnAllQ_Click" Width="120" Height="40" HorizontalAlignment="Right"/>
                            <Button x:Name="btnDelQ" Grid.Column="1" Click="btnDelQ_Click"  Width="40" Height="40" Background="#f15a23" Foreground="#fff"/>
                        </Grid>
                        <ScrollViewer Width="475" Height="600" VerticalScrollBarVisibility="Auto" BorderBrush="Black" BorderThickness="1">
                            <Grid x:Name="gDBQuest">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="395"/>
                                    <ColumnDefinition Width="80"/>
                                </Grid.ColumnDefinitions>
                            </Grid>
                        </ScrollViewer>
                    </StackPanel>
                    <StackPanel HorizontalAlignment="Stretch">
                        <Button x:Name="btnFileQ" Height="40" Width="40" Click="btnFileQ_Click" Background="#1c64e7" Margin="10,128,10,64" Foreground="#fff" FontWeight="Bold"/>
                        <Button x:Name="btnImpDBQ" Height="40" Width="40" Click="btnImpDBQ_Click" Background="#80cc28" Foreground="#fff" FontWeight="Bold"/>
                    </StackPanel>
                    <ScrollViewer Width="475" Height="600" VerticalScrollBarVisibility="Auto" BorderBrush="Black" BorderThickness="1">
                        <Grid x:Name="gQuest">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="395"/>
                                <ColumnDefinition Width="80"/>
                            </Grid.ColumnDefinitions>
                        </Grid>
                    </ScrollViewer>
                </StackPanel>
            </TabItem>
        </TabControl>
        <StackPanel x:Name="refSl" Visibility="Collapsed">
            <StackPanel Name="sp1" Orientation="Horizontal">
                <TextBlock x:Name="txtNeeDB" Width="240" Padding="0,4,0,0"/>
                <Button x:Name="btnDBDelNee" Height="40" Width="120" Margin="160,0,0,0"/>
            </StackPanel>
            <StackPanel Name="sp2" Orientation="Horizontal">
                <TextBlock x:Name="txtNeeTmp" Width="240" Padding="0,4,0,0"/>
                <Button Name="btnImpDBNee" Height="40" Width="120" Margin="5,0,5,0" Background="#80cc28" Foreground="#fff"/>
                <Button Name="btnFileNee" Height="40" Width="120" Background="#1c64e7" Foreground="#fff" FontWeight="Bold"/>
                <Button Name="btnTmpDelNee" Height="40" Width="120" Background="#f15a23" Foreground="#fff"/>
            </StackPanel>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="60"/>
                    <ColumnDefinition Width="240"/>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="240"/>
                    <ColumnDefinition Width="100"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                </Grid.RowDefinitions>
                <TextBlock Name="txtId" Background="Coral" TextAlignment="Center"/>
                <TextBlock Name="txtName" Grid.Column="1" Background="Brown" TextAlignment="Center"/>
                <TextBlock Name="txtBirdate" Grid.Column="2" Background="Cyan" TextAlignment="Center"/>
                <TextBlock Name="txtBirpl" Grid.Column="3" Background="Gold" TextAlignment="Center"/>
                <TextBlock Name="txtRoom" Grid.Column="4" Background="Blue" TextAlignment="Center"/>
            </Grid>
            <ScrollViewer VerticalScrollBarVisibility="Auto" Height="300">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="60"/>
                        <ColumnDefinition Width="240"/>
                        <ColumnDefinition Width="100"/>
                        <ColumnDefinition Width="240"/>
                        <ColumnDefinition Width="100"/>
                    </Grid.ColumnDefinitions>
                </Grid>
            </ScrollViewer>
        </StackPanel>
    </StackPanel>
</Page>
